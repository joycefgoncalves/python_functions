#task 1

def add_item(shopping_list, item):
    shopping_list.append(item)
    print(f"{item} has been added to the shopping list.")

# Example usage:
shopping_list = []  # Initialize an empty list
add_item(shopping_list, "Apples")
add_item(shopping_list, "Bananas")
add_item(shopping_list, "Milk")

print("Current shopping list:", shopping_list)


#task 2

def add_item(shopping_list, item):
    shopping_list.append(item)
    print(f"{item} has been added to the shopping list.")

def remove_item(shopping_list, item):
    if item in shopping_list:
        shopping_list.remove(item)
        print(f"{item} has been removed from the shopping list.")
    else:
        print(f"{item} is not in the shopping list.")

# Example usage:
shopping_list = ["Apples", "Bananas", "Milk"]
print("Current shopping list:", shopping_list)

remove_item(shopping_list, "Bananas")
print("Updated shopping list:", shopping_list)


#task 3

def add_item(shopping_list, item):
    shopping_list.append(item)
    print(f"{item} has been added to the shopping list.")

def remove_item(shopping_list, item):
    if item in shopping_list:
        shopping_list.remove(item)
        print(f"{item} has been removed from the shopping list.")
    else:
        print(f"{item} is not in the shopping list.")

def print_shopping_list(shopping_list):
    print("Shopping List:")
    if shopping_list:
        for item in shopping_list:
            print("- ", item)
    else:
        print("The shopping list is empty.")

# Example usage:
shopping_list = ["Apples", "Bananas", "Milk"]
print_shopping_list(shopping_list)

add_item(shopping_list, "Bread")
remove_item(shopping_list, "Bananas")
print_shopping_list(shopping_list)




